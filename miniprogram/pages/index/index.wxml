<!--index.wxml-->
<view class="page">

   <!-- 顶部标题 -->
   <view class="header">
        <view class="title">{{emo1}} 芒果学习工具 {{emo2}}</view>
        <view class="subtitle">选择你想练习的数学内容吧！</view>
    </view>
    
    <!-- 云朵装饰 -->
    <view class="cloud cloud1">{{emo3}}</view>
    <view class="cloud cloud2">{{emo4}}</view>
    
    <!-- 主要内容区域 -->
    <view class="grid-container">
        <view class="grid-item"  bind:tap="goToSimpleAddSub">
            <view class="icon">➕➖</view>
            <view>加减口算</view>
            <view>简单的加减法练习</view>
        </view>
        
        <view class="grid-item" bind:tap="goToAddSub">
            <view class="icon">🧮</view>
            <view>加减复杂计算</view>
            <view>多位数的加减法</view>
        </view>
        
        <view class="grid-item" bind:tap="goToMultip">
            <view class="icon">✖️</view>
            <view>乘法口决</view>
            <view>背诵乘法表</view>
        </view>
        
        <view class="grid-item" bind:tap="goToMult">
            <view class="icon">➗</view>
            <view>乘除口算</view>
            <view>乘法和除法练习</view>
        </view>
        

        
        <view class="grid-item" bind:tap="goToMixAdd">
            <view class="icon">🔢</view>
            <view>加减混合计算</view>
            <view>加减混合计算的练习</view>
        </view>

        <view class="grid-item" bind:tap="goToMixMultip">
            <view class="icon">🔡</view>
            <view>乘与加减混合</view>
            <view>乘法与加减混合计算的练习</view>
        </view>
        <view class="grid-item" bind:tap="goTotenFun">
            <view class="icon">🔟</view>
            <view>凑、破10法</view>
            <view>学习如何凑10和破10的方法</view>
        </view>
        <view class="grid-item" bind:tap="goAboutFun">
            <view class="icon">🙋‍♂️</view>
            <view>关于</view>
            <view>关于本小程序的说明</view>
        </view>
    </view>
    
    <!-- 卡通动物 -->
    <view class="cartoon-animal bunny" bind:tap="goNoteBookFun">{{emo1}}</view>
    <view class="cartoon-animal panda">{{emo2}}</view>
    
    <!-- 底部 -->
    <view class="footer">
        快乐学习 · 天天进步
    </view>
</view>
